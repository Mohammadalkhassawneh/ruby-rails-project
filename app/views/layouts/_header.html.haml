%nav.navbar.navbar-expand-lg.bg-light
  .container-fluid
    %a.navbar-brand{:href => "#"} Navbar
    %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-bs-target" => "#navbarSupportedContent", "data-bs-toggle" => "collapse", :type => "button"}
      %span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      %ul.navbar-nav.me-auto.mb-2.mb-lg-0
        %li.nav-item
          %a.nav-link.active{class: "#{'btn active m-0 p-0' if current_page?(root_path)}"}
            = link_to root_path, class: 'nav-link' do 
              .fa.fa-home
              Home
        %li.nav-item
          %a.nav-link.active{class: "#{'btn active m-0 p-0' if current_page?(courses_path)}"}
            = link_to courses_path, class: 'nav-link' do 
              .fa.fa-book 
              Courses
      %form.d-flex
        = form_tag(courses_path, method: :get) do
          .input-group
            = text_field_tag :title, params[:title], autocomplete: 'off', placeholder: "Search", class: 'form-control-sm'
            %span.input-group-append
              %button.btn.btn-primary.btn-sm{:type => "submit"}
                Search
      - if current_user
        = current_user.email
        %button.btn.btn-warning
          = link_to edit_user_registration_path, class: 'nav-link' do
            Account Settings
          = button_to 'Log out', destroy_user_session_path, method: :delete,class: 'btn btn.warning mx-1',style: 'background-color:red'
      - else
        = link_to 'Sign Up', new_user_registration_path, class:'btn btn.primary mx-1',style: 'background-color: green; color:white'
        = link_to 'Log In', new_user_session_path ,class:'btn btn.warning mx-1',style: 'background-color: blue; color:white'
